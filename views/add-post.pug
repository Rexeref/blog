extends layout

block content
  nav(class='breadcrumb is-centered')
    ul
      li
        a(href='/') Home
      li
        a(href='/admin') Admin
      li(class='is-active')
        a 
          p Nuovo Post

  div(class='mx-6')
    h2(class='subtitle is-3') Aggiungi Nuovo Post
    form(action='/admin/posts_add', method='POST')

      div(class='field')
        label(class='label', for='title') Titolo:
        div(class='control')
          input(class='input', type='text', id='title', name='title', required)
        
      div(class='field')
        label(class='label', for='cover_image') Copertina:
        div(class='control')
          input(class='input', type='file', id='cover_image', name='cover_image')

      div(class='field')
        label(class='label', for='content') Contenuto:
        div(class='control')
          textarea(class='textarea', id='content', name='content', required)

      div(class='field is-grouped')
        div(class='control')
          input(class='button is-link', type='submit', value='Pubblica')